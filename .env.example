# ===========================================
# Stremio Status - Environment Configuration
# ===========================================
#
# Copy this file to .env and update values as needed.
#
# Profiles (set one):
#   full   - Run both status-page and addon (default)
#   addon  - Run addon only (uses external health URL)
#   status - Run status-page only
#
COMPOSE_PROFILES=full


# ===================
# Status Page (Gatus/Grafana/Postgres/Warp)
# ===================
# Only needed when running 'status' or 'full' profile

# Domain
DOMAIN=stremio-status.com

# Database
DB_PASSWORD=secure_postgres_password_here

# Grafana
GRAFANA_PASSWORD=admin_password_here
GF_SERVER_DOMAIN=stats.stremio-status.com

# Ports (external)
GATUS_PORT=8081
GRAFANA_PORT=3001
WARP_PORT=1080

# Proxy Configuration
PROXY_URL=
WARP_PROXY_URL=http://warp:1080

# Discord Alerts
DISCORD_WEBHOOK_ENABLED=false
DISCORD_WEBHOOK_URL=

# ===================
# Addon (Stremio Status)
# ===================
# All addon vars use ADDON_ prefix

# Port
ADDON_PORT=7000

# Health data source URL
# For full profile (internal Docker network): http://gatus:8080
# For addon-only profile (public URL): https://status.example.com
ADDON_HEALTH_BASE_URL=http://gatus:8080

# Public URL where users access the addon (for manifest links)
ADDON_PUBLIC_BASE_URL=http://localhost:7000

# Cache TTL in seconds for health data
ADDON_CACHE_TTL_SECONDS=45

# Log level: debug, info, warning, error
ADDON_LOG_LEVEL=info
